<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit User</title>
   <!-- <link rel="stylesheet" type="text/css" href="/stylesheets/edit.css">  -->
</head>

<body>

    <h1>Edit User</h1>

    <form id="updateUserForm" action="/edit/:id" method="post">

        <input type="hidden" id="id" name="id">
        <label for="name">Name:</label>
        <input type="text" id="name" name="name"><br>

        <label for="email">Email:</label>
        <input type="email" id="email" name="email"><br>

        <label for="password">Password:</label>
        <input type="password" id="password" name="password"><br>

        <button type="submit" onclick="">Update User</button>
        <a href="/users">Back to Home</a>
    </form>

    <script>

        document.getElementById('updateUserForm').addEventListener('submit', (event) => {
            event.preventDefault();
            // const id = document.getElementById('id').value;
            const id = window.location.pathname.split("/")[2];
            const name = document.getElementById('name').value;
            const email = document.getElementById('email').value;
            const password = document.getElementById('password').value;

            fetch('/edit/' + id, {
                method: 'POST',
                headers: {
                    'Accept': 'application/json',
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({
                    "id": id,
                    "name": name,
                    "email": email,
                    "password": password
                })
            })
                .then(() => {
                    console.log("User updated successfully", id);
                    // window.location.href = '/users/ ';
                    alert('User is updated');
                })
                .catch(err => {
                    console.log(err, 'User is not updated');
                });
        });

      
    </script>


</body>

</html> 