<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Database</title>
    <link rel="stylesheet" type="text/css" href="/stylesheets/users.css">

    
</head>

<body>

    <h1>Users Database</h1>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Password</th>
                <th>Delete</th>
                <th>Edit</th>
            </tr>
        </thead>
        <tbody>
           
            <% data.map((element) => {%>
                <tr>
                    <td>
                        <%= element.id %>
                    </td>

                    <td>
                        <%= element.name %>
                    </td>

                    <td>
                        <%= element.email %>
                    </td>

                    <td>
                        <%= element.password %>
                    </td>

                      <td>
                        <button onclick="deleteUser(<%= element.id %>)">Delete</button>  
                      </td>
            
                    <td>
                       <a href="/edit<%= element.id %>">Edit</a> 
                    </td>  

                </tr>
           <% }) %>
                
           
        </tbody>
    </table>
</body>

<script>


//delete----start--------------

const deleteUser = async (id) => {
    // alert('Are you sure wants to delete the user');  
    try {
      
        const res =  await fetch('http://localhost:3000/delete', {
            method: 'POST',
            headers: {
                'Accept': 'application/json',
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({
                "id" : id
            })
        })
      
        console.log("User Deleted successfully", id);
        window.location.reload(); 
        alert('going to delete');  

    } catch (error) {
        console.log(error, 'User is not delete');
    } 
}


//delete----end--------------


</script>

</html>










